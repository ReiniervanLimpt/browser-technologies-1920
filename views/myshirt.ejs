<body>
  <main>
    <form class="getshirt" action="/getshirt" method="post">
      <legend aria-label="haal uw design op">Haal uw design op</legend>
      <input name="shirtId" type="text" value="id">
      <input type="submit" value="print shirt">
      <p>
        het id van uw shirt:
        <%= id %> gebruik deze om uw shirt later weer op te halen
      </p>
    </form>
    <div class="shirteditor">
      <form class="" action="/update" method="post" aria-label="maak je eigen shirt">

        <legend aria-label="kleur van het shirt">Kleur van het shirt</legend>

        <input id="orange" type="radio" name="kleur" value="orange" <% if (kleur=="orange" ) { %> checked
        <% } %>>
          <label for="orange">ORANGE</label>
          <input id="perltwinkle" type="radio" name="kleur" value="perltwinkle" <% if (kleur=="perltwinkle" ) { %> checked
          <% } %>>
            <label for="perltwinkle">PERLTWINKLE</label>
            <input id="green" type="radio" name="kleur" value="green" <% if (kleur=="green" ) { %> checked
            <% } %>>
              <label for="green">NERD GREEN</label>
              <input id="tealblue" type="radio" name="kleur" value="tealblue" <% if (kleur=="tealblue" ) { %> checked
              <% } %>>
                <label for="tealblue">TEAL BLUE</label>
                <input id="gold" type="radio" name="kleur" value="gold" <% if (kleur=="gold" ) { %> checked
                <% } %>>
                  <label for="gold">GOLD</label>
                  <input id="cinnamon" type="radio" name="kleur" value="cinnamon" <% if (kleur=="cinnamon" ) { %> checked
                  <% } %>>
                    <label for="cinnamon">CINNAMON</label>
                    <input id="blueviolet" type="radio" name="kleur" value="blueviolet" <% if (kleur=="blueviolet" ) { %> checked
                    <% } %>>
                      <label for="blueviolet">BLUEVIOLET</label>
                      <input id="sand" type="radio" name="kleur" value="sand" <% if (kleur=="sand" ) { %> checked
                      <% } %>>
                        <label for="sand">SAND</label>
                        <input id="salmon" type="radio" name="kleur" value="salmon" <% if (kleur=="salmon" ) { %> checked
                        <% } %>>
                          <label for="salmon">SALMON</label>
                          <input id="blauw" type="radio" name="kleur" value="blauw" <% if (kleur=="blauw" ) { %> checked
                          <% } %>>
                            <label for="blauw">BLAUW</label>
                            <input id="rood" type="radio" name="kleur" value="rood" <% if (kleur=="rood" ) { %> checked
                            <% } %>>
                              <label for="rood">ROOD</label>
                              <input id="geel" type="radio" name="kleur" value="groen" <% if (kleur=="geel" ) { %> checked
                              <% } %>>
                                <label for="geel">GEEL</label>

                                <legend aria-label="kleur van het shirt">Logo op het shirt</legend>

                                <input id="heart" type="radio" name="vorm" value="heart" <% if (vorm=="heart" ) { %> checked
                                <% } %>>
                                  <label for="heart">HEART</label>
                                  <input id="bracket" type="radio" name="vorm" value="bracket" <% if (vorm=="bracket" ) { %> checked
                                  <% } %>>
                                    <label for="bracket">BRACKET</label>
                                    <input id="sword" type="radio" name="vorm" value="sword" <% if (vorm=="sword" ) { %> checked
                                    <% } %>>
                                      <label for="sword">SWORD</label>

                                      <select name="maat">
          <option value="small" <% if (maat=="small" ) { %> checked
          <% } %>>S</option>
          <option value="medium" <% if (maat=="medium" ) { %> checked
          <% } %>>M</option>
          <option value="large" <% if (maat=="small" ) { %> checked
          <% } %>>L</option>
          <option value="extra-large">XL</option>
        </select>

                                      <input id="man" type="radio" name="geslacht" value="man" <% if (geslacht=="man" ) { %> checked
                                      <% } %>>
                                        <label for="man">MAN</label>
                                        <input id="vrouw" type="radio" name="geslacht" value="vrouw" <% if (geslacht=="vrouw" ) { %> checked
                                        <% } %>>
                                          <label for="vrouw">VROUW</label>

                                          <legend aria-label="sla shirt op">Tekst op het shirt</legend>
                                          <input id="tekst" name="shirtTekst" type="text" value="<%= shirtTekst %>">

                                          <input type="submit" value="opslaan">

