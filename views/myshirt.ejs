  <main>
    <form class="getshirt" action="/getshirt" method="post">
      <label for="tekst"><legend aria-label="haal uw design op">Haal uw design op</legend>
      <input name="shirtId" type="text" value="id">
      <input type="submit" value="print shirt">
      </label>
    </form>
    <div class="shirteditor">
      <form class="" action="/update" method="post" aria-label="maak je eigen shirt">
        <label> Maat
      <select name="maat">
          <option value="small"<% if (maat=="small" ) { %> selected
          <% } %>>S</option>
          <option value="medium"<% if (maat=="medium" ) { %> selected
          <% } %>>M</option>
          <option value="large"<% if (maat=="large" ) { %> selected
          <% } %>>L</option>
          <option value="extra-large"<% if (maat=="extra-large" ) { %> selected
          <% } %>>XL</option>
        </select>
      </label>
        <label>
        <legend aria-label="kleur van het shirt">Kleur van het shirt</legend>
         Blauw
      <input type="radio" name="kleur" value="blauw" required <% if (kleur=="blauw" ) { %> checked
      <% } %>> Rood
        <input type="radio" name="kleur" value="rood" required <% if (kleur=="rood" ) { %> checked
        <% } %>> Groen
          <input type="radio" name="kleur" value="groen" required <% if (kleur=="groen" ) { %> checked
          <% } %>></label>
        <label>
        <legend aria-label="kleur van het shirt">Logo op het shirt</legend>
        Cirkel
            <input type="radio" name="vorm" value="cirkel" required <% if (vorm=="cirkel" ) { %> checked
            <% } %>> Vierkant
            <input type="radio" name="vorm" value="vierkant" required <% if (vorm=="vierkant" ) { %> checked
            <% } %>> Driehoek
            <input type="radio" name="vorm" value="driehoek" required <% if (vorm=="driehoek" ) { %> checked
            <% } %>></label>
        <label for="tekst"><legend aria-label="sla shirt op">Sla shirt op</legend>
      <input id="tekst" name="shirtTekst" type="text" value="<%= shirtTekst %>">
      <input type="submit" value="opslaan">
      </label>
      </form>
